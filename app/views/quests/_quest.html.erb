<%= turbo_frame_tag dom_id(quest) do %>
  <div class="flex items-center justify-between p-4 my-4 rounded-xl border border-gray-200 shadow-sm bg-white hover:shadow-md transition">
    
    <div class="flex items-center space-x-3 min-w-0 flex-1">
      <%= form_with model: quest, method: :patch, class: "flex items-center" do |form| %>
        <%= form.check_box :is_complete,
          { onchange: "this.form.requestSubmit(); this.blur();", data: { testid: "checkbox-quest-#{quest.id}" }, class: "w-5 h-5 rounded border-gray-300 cursor-pointer" } %>
      <% end %>
      <span data-testid="quest-title-<%= quest.id %>" 
            class="text-sm min-sm:text-lg font-medium text-gray-800 break-words whitespace-normal max-w-full <%= 'line-through text-gray-400' if quest.is_complete %>">
        <%= quest.title %>
      </span>
    </div>

    <div class="flex-shrink-0">
      <%= button_to "Delete",
          quest,
          method: :delete,
          data: { testid: "delete-quest-#{quest.id}" },
          class: "ml-5 rounded-lg px-4 py-2 text-sm font-semibold text-white bg-red-600 hover:bg-red-500 shadow focus:outline-none focus:ring-2 focus:ring-red-400 transition cursor-pointer" %>
    </div>
  </div>
<% end %>
