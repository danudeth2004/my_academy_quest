<%= turbo_frame_tag dom_id(quest) do %>
  <div class="mt-10 flex sm:w-auto my-5 space-y-5 border-b-2 border-gray-200">
    <div class="w-full">
      <%= form_with model: quest, method: :patch do |form| %>
        <%= form.check_box :is_complete, { onchange: "this.form.requestSubmit()" } %>
      <% end %>
      <%= quest.title %>
    </div>
    <div>
    <%= button_to "Destroy", quest, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
