<% content_for :title, "Quests" %>

<div class="container mx-auto px-6 py-10">
  <div class="flex flex-col items-center space-y-8">
    
    <div class="flex flex-col items-center text-center space-y-4">
      <%= image_tag "profile_image.jpeg", class: "w-80 h-80 rounded-full object-cover shadow-lg p-2 border-4 border-dashed border-amber-900" %>
      <h1 data-testid="profile-name" class="font-extrabold text-5xl text-gray-800">Danudeth Ninkuha <span class="text-amber-900">(Oat)</span></h1>
      <%= link_to "See my brag", brag_path, data: { testid: "link-brag-btn" }, class: "mt-2 px-4 py-2 rounded-lg bg-amber-900 text-white font-semibold shadow hover:bg-amber-800 transition" %>
    </div>

    <div class="w-full max-w-5xl">
      <h1 class="font-bold text-4xl text-gray-900 mb-6 border-b pb-3">Quests</h1>

      <div class="mb-8 bg-white/60 backdrop-blur-md p-4 rounded-2xl shadow-lg">
        <%= turbo_frame_tag "new_quest_form" do %>
          <%= render "form", quest: @quest %>
        <% end %>
      </div>

      <div class="space-y-4">
        <%= turbo_frame_tag "quests" do %>
          <%= render partial: "quest", collection: @quests, as: :quest %>
        <% end %>
      </div>
    </div>
  </div>
</div>
