<%= form_with(model: quest, id: "new_quest_form", class: "w-full") do |form| %>
  <div class="flex flex-col sm:flex-row sm:items-center gap-4 mt-8 p-4 rounded-xl">
    
    <div class="flex-1">
      <%= form.text_field :title,
          data: { testid: "quest-title-input" },
          class: "w-full rounded-lg border-gray-600 shadow-sm px-4 py-3 bg-white placeholder-gray-400 sm:text-base",
          placeholder: "Enter quest title",
          required: true %>
    </div>

    <div>
      <%= form.submit "Create",
          data: { testid: "create-quest-btn" },
          class: "w-full rounded-lg px-5 py-3 bg-sky-700 hover:bg-sky-600 text-white font-semibold shadow transition cursor-pointer" %>
    </div>
  </div>
<% end %>
