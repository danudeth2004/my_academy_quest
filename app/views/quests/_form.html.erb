<%= form_with(model: quest, id: "new_quest_form", class: "contents") do |form| %>
  <div class="container flex space-x-5 items-center mt-10">
    <div class="w-full">
    <%= form.text_field :title, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", required: true %>
    </div>
    <div class="">
    <%= form.submit "Create", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>
